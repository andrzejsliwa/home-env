[user]
    name     = Andrzej Åšliwa
    email    = andrzej.sliwa@i-tool.eu
[github]
    user     = andrzejsliwa
[color]
    branch       = true
    diff         = true
    interactive  = true 
    status       = true
    ui           = true
[help]
    autocorrect  = true
[credential]
    helper = osxkeychain
[core]
    editor       = vim
    autocrlf     = input
    excludesfile = ~/.gitignore_global
[alias]
    st       = status -bs
    br       = branch -avv
    last     = diff --cached HEAD^
    lg       = log --stat --abbrev-commit
    lgg      = log --stat --abbrev-commit -p
    ll       = log --graph --all --pretty=format:'%C(yellow)%h%C(cyan)%d%Creset %s %C(white)- %an, %ar%Creset'
    df       = diff --color-words
    dh       = diff --color-words HEAD
    ds       = diff --stat -r
    amend    = commit --amend
    fix      = commit --amend --no-edit
    ci       = commit
    unpushed = cherry -v
    pu       = !"git fetch origin -v; git fetch upstream -v; git merge upstream/master"
    upstream = !"git remote add upstream"
    who      = shortlog -s --
    ignore   = !([ ! -e .gitignore ] && touch .gitignore) | echo $1 >>.gitignore
